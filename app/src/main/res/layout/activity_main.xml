<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/backgroundclock"
    tools:context="com.sumonandroid.mycalender.MainActivity"
    android:weightSum="1">


        <AnalogClock
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff22"
            android:textSize="35sp"
            android:textStyle="italic"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showHead"
                android:text="@string/showCalender"
                android:textColor="#d6d7df"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#1a1919"
                />


</LinearLayout>
